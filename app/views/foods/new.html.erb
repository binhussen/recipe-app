<div class="form">
  <%= form_with model: @food do |form| %>
    <% if @food.errors.any? %>
      <div>
        <h3><%= pluralize(@food.errors.count, "error") %>occurred: </h3>
        <ul>
          <%= @food.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <h2>Add a New Food</h2>
    <div>
      <%= form.label :name, "Name" %>
      <%= form.text_field :name, placeholder: "Name", required: true, autofocus: true%>
    </div>
    <div class="my-4">
      <%= form.label :quantity, "Quantity" %>
      <%= form.number_field :quantity, placeholder: 0, required: true, autofocus: true%>
    </div>
    <div class="my-4">
      <%= form.label :measurement_unit, "Measurement Unit" %>
      <%= form.text_field :measurement_unit, placeholder: "kg", required: true, autofocus: true%>
    </div>
    <div class="my-4">
      <%= form.label :price, "Price" %>
      <%= form.number_field :price, placeholder: 100, required: true, autofocus: true%>
    </div>
    <div>
      <%= form.submit "Add Food", data: { disable_with: "Loading" } %>
    </div>
  <% end %>
</div>
