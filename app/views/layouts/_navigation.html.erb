<nav>
  <h1>Shopping on Rails</h1>
  <% if current_user %>
    <%= link_to "Recipes", recipes_path%>
    <%= link_to "Foods", foods_path%>
    <%= link_to "General Shopping List", "/general_shopping_list" %>
  <% end %>
  <%= link_to "Public Recipes", "/public_recipes"%>
  <div>
